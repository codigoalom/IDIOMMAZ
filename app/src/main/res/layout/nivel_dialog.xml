<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@drawable/dialog_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/borrarnivsTextView"
        android:fontFamily="@font/annie_use_your_telescope"
        android:textStyle="bold"
        android:text="¿Desea borrar todos los niveles?"
        android:textColor="#ffffff"
        android:textSize="26dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/borrarnivsTextView"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="¡Borrar!"
            android:id="@+id/borrardialogButton"
            android:background="@drawable/soft_corners"
            android:textColor="#ffffff"
            android:fontFamily="@font/annie_use_your_telescope"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:paddingHorizontal="42dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Cancelar"
            android:id="@+id/cancelardialogButton"
            android:background="@drawable/soft_corners"
            android:textColor="#ffffff"
            android:fontFamily="@font/annie_use_your_telescope"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:paddingHorizontal="42dp"
            android:layout_toRightOf="@id/borrardialogButton"
            />
    </RelativeLayout>

</RelativeLayout>